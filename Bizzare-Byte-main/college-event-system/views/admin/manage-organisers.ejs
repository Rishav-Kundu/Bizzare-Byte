<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Organisers</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="admin-header">
  <h1>Organisers</h1>
  <a href="/admin/organisers/events" class="btn secondary">← Back to Events</a>
</div>

<div class="container">

  <div class="info-card">
    <h2><%= event.name %></h2>
    <p><b>Budget:</b> ₹<%= event.budget %></p>
  </div>

  <h3 class="section-title">Send Message to Organisers</h3>
  <form method="POST" action="/admin/send-message" class="form-card">
    <input type="hidden" name="event_id" value="<%= eventId %>">
    <textarea name="message" rows="4"
      placeholder="Write a notice (visible only to organisers)" required></textarea>
    <button type="submit" class="btn primary">Send Message</button>
  </form>

  <h3 class="section-title">Organisers List</h3>

  <% if (organisers.length === 0) { %>
    <p class="empty-text">No organisers added for this event.</p>
  <% } else { %>
    <table class="styled-table">
      <tr>
        <th>Name</th>
        <th>Reg No</th>
        <th>Notes</th>
        <th>Action</th>
      </tr>
      <% organisers.forEach(o => { %>
        <tr>
          <td><%= o.name %></td>
          <td><%= o.regno %></td>
          <td><%= o.notes || "-" %></td>
          <td>
            <a href="/admin/delete-organiser/<%= o.id %>" class="btn danger">Delete</a>
          </td>
        </tr>
      <% }) %>
    </table>
  <% } %>

</div>

</body>
</html>

